{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,
    "noImplicitAny": true,
    "skipLibCheck":true,
    "listFiles":true,
    "target": "es5",
    "baseUrl":".",
    "paths": {
      "@/*":["src/*"]
    },
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
