{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "allowJs": true,
    // "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck":true,
    "listFiles":true,
    "target": "es5",
    "outDir": "./lib",
    "baseUrl":".",
    "paths": {
      "@/*":["src/*"]
    },
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
